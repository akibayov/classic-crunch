{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "isolatedModules": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "classic-crunch/*": ["*"]
        },
        "outDir": "dist/@typings"
    },
    "include": ["src"]
}
